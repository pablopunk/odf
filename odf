#!/bin/bash

repo="$( git rev-parse --show-toplevel )"     # absolute path
repo="$( realpath $repo --relative-to=$PWD 2>/dev/null )" # relative path

# Files to be opened:
##Â Modified files ignored deleted
## New untracked files
files=$( {\
  ( git diff -w | grep "^+++ b" | sed 's,+++ b/,,' ) ; \
  ( git status --porcelain | grep "??" | sed s/^??\ // ) \
} )

# Use provided editor, 'echo' as default
if [ $# -gt 0 ]; then
  editor=$@
else
  editor=echo
fi

if [ ! -z "$files" ]; then
  # Add repo on spaces
  files="$repo/$(echo $files | sed "s@ @ $repo/@g")"

  # odf
  $editor $files
fi
